
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/QuanLy/Views/Share/_LayoutQuanLy.cshtml";
}

@model DoAnMonPhanTichPhanMem.Areas.GiamDoc.Models.DanhSachThietBi

<div>
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Phòng Ban</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="../DuyetDon/Index"><i class="icofont icofont-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../DanhSachThietbiQL/Index">Danh Sách Thiết Bị</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../DanhSachThietbiQL/Create">Form Thêm Danh Sách Thiết Bị</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="table-wrapper">
            <form method="post" id="createForm">
                <div>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="form-group">
                                <label asp-for="phongBan">Tên Phòng Ban</label>
                                <select asp-for="maPhongBan" type="text" asp-items="ViewBag.PhongBan" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="thongTinCoSoVatChat">Tên Thiết Bị</label>
                                <select asp-for="maThietBi" type="text" asp-items="ViewBag.ThongTinCoSoVatChat" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="thongTinCoSoVatChat">Số Lượng</label>
                                <select asp-for="maThietBi" type="text" asp-items="ViewBag.TinCoSoVatChat" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="viTri">Vị Trí </label>
                                <textarea id="mytextarea" asp-for="viTri"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" href="../DanhSachThietbiQL/Index" class="btn btn-secondary add-button" data-dismiss="modal" onclick="quayLaiTrang()">Đóng</button>
                    <button type="submit" form="createForm" class="btn btn-primary">Lưu</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    function quayLaiTrang() {
        // Chuyển hướng trở lại trang Loại Cơ Sở Vật chất
        window.location.href = '../DanhSachThietbiQL/Index';
    }
</script>

