
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/GiamDoc/Views/Share/_LayoutAdmin.cshtml";
}

@model DoAnMonPhanTichPhanMem.Areas.GiamDoc.Models.PhongBan

<div>
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Phòng Ban</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="../ThongKe/Index"><i class="icofont icofont-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../PhongBan/Index">Phòng Ban</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../PhongBan/Update"> Update Phòng Ban</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="table-wrapper">
            <form method="post" id="createForm">
                <div>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="form-group">
                                <label asp-for="tenPhongBan">Tên Phòng Ban</label>
                                <input asp-for="tenPhongBan" type="text" required class="form-control"/>
                                <input asp-for="maPhongBan" type="hidden" required class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="users">Tên Trưởng Phòng</label>
                                <select asp-for="maNguoiDung" type="text" asp-items="ViewBag.Users" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" href="../PhongBan/Index" class="btn btn-secondary add-button" data-dismiss="modal" onclick="quayLaiTrang()">Đóng</button>
                    <button type="submit" form="createForm" class="btn btn-primary">Lưu</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    function quayLaiTrang() {
        // Chuyển hướng trở lại trang Loại Cơ Sở Vật chất
        window.location.href = '../PhongBan/Index';
    }
</script>

