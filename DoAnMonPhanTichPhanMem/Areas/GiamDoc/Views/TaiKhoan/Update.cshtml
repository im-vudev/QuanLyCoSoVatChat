
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/GiamDoc/Views/Share/_LayoutAdmin.cshtml";
}

@model DoAnMonPhanTichPhanMem.Areas.GiamDoc.Models.TaiKhoan

<div>
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Thông Tin Cơ Sở Vật Chất</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="../ThongKe/Index"><i class="icofont icofont-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../TaiKhoan/Index">Users</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../TaiKhoan/Update">Tạo Tài Khoản</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="table-wrapper">
            <form method="post" id="createForm" enctype="multipart/form-data">
                <div>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="form-group">
                                <label asp-for="hinhAnh">Hình Ảnh</label>
                                <input asp-for="hinhAnh" type="file" class="form-control" accept=".jpg, .jpeg, .png" />
                                <span asp-validation-for="hinhAnh" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="email">Tài khoản</label>
                                <input asp-for="email" type="text" required class="form-control">
                                <input asp-for="maTaKhoan" type="hidden" required class="form-control">
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="matKhau">Mật Khẩu</label>
                                <input asp-for="matKhau" type="text" required class="form-control">
                                <span asp-validation-for="matKhau" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="users">Chức Vụ</label>
                                <select asp-for="maNguoiDung" type="text" asp-items="ViewBag.Users" class="form-control"></select>
                                <span asp-validation-for="maNguoiDung" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <button type="button" href="../TaiKhoan/Index" class="btn btn-secondary add-button" data-dismiss="modal" onclick="quayLaiTrang()">Đóng</button>
                    <button type="submit" form="createForm" class="btn btn-primary">Lưu</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    function quayLaiTrang() {
        // Chuyển hướng trở lại trang Loại Cơ Sở Vật chất
        window.location.href = '../TaiKhoan/Index';
    }
</script>