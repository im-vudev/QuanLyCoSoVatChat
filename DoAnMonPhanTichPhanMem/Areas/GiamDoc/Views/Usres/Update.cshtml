
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/GiamDoc/Views/Share/_LayoutAdmin.cshtml";
}

@model DoAnMonPhanTichPhanMem.Areas.GiamDoc.Models.Users

<div>
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Thông Tin Cơ Sở Vật Chất</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="../ThongKe/Index"><i class="icofont icofont-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../Users/Index">Users</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="../Users/Update">Sửa Users</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="table-wrapper">
            <form method="post" id="createForm">
                <div>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="form-group">
                                <label asp-for="tenNguoiDung">Tên Nhân Viên</label>
                                <input asp-for="tenNguoiDung" type="text" required class="form-control">
                                <input asp-for="maNguoiDung" type="hidden" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="gioiTinh">Giới Tính</label>
                                <select asp-for="gioiTinh" required>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ngaySinh">Ngày Tháng năm Sinh</label>
                                <input asp-for="ngaySinh" type="date" required class="form-control" asp-format="{0:yyyy-MM-dd}">
                            </div>
                            <div class="form-group">
                                <label asp-for="CMND_CCCD">Căn Cước Công Dân - Chứng Minh Nhân Dân</label>
                                <input asp-for="CMND_CCCD" type="text" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="soDienThoai">Số Điện Thoại</label>
                                <input asp-for="soDienThoai" type="text" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="email">Email</label>
                                <input asp-for="email" type="text" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="vaiTro">Chức Vụ</label>
                                <input asp-for="vaiTro" type="text" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="diaChi">Địa Chỉ</label>
                                <textarea id="mytextarea" asp-for="diaChi"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" href="../Users/Index" class="btn btn-secondary add-button" data-dismiss="modal" onclick="quayLaiTrang()">Đóng</button>
                    <button type="submit" form="createForm" class="btn btn-primary">Lưu</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    function quayLaiTrang() {
        window.location.href = '../Users/Index';
    }
</script>

